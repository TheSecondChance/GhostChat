@model GhostChat.ViewModels.LoginVM

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/auth_form.css" rel="stylesheet" />
</head>
<body class="text-center">
    <form method="post" class="form-register" action="/Home/Index">
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <input type="text" name="Username" placeholder="Username" class="form-control" />
        <input type="password" name="Password" placeholder="Password" class="form-control last-input" />
        <button type="submit" class="btn btn-lg btn-primary btn-block">Login</button>
    </form>
</body>
</html>
